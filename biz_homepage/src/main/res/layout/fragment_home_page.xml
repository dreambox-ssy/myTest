<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.jack.biz_homepage.fragment.HomePageFragment"
    >
    <View
        android:id="@+id/search_background"
        android:layout_width="0dp"
        android:layout_height="@dimen/home_page_search_bar_bg_height"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="@dimen/home_page_search_bar_bg_margin_start"
        android:layout_marginEnd="@dimen/home_page_search_bar_bg_margin_end"
        android:layout_marginTop="@dimen/home_page_search_bar_bg_margin_top"
        android:background="@drawable/home_page_search_edit_bg"/>
    <ImageView
        android:id="@+id/iv_search_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/search_icon"
        app:layout_constraintTop_toTopOf="@id/search_background"
        app:layout_constraintBottom_toBottomOf="@id/search_background"
        app:layout_constraintStart_toStartOf="@id/search_background"/>
    <EditText
        android:id="@+id/et_search"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/search_background"
        app:layout_constraintBottom_toBottomOf="@id/search_background"
        app:layout_constraintStart_toEndOf="@id/iv_search_icon"
        app:layout_constraintEnd_toEndOf="@id/search_background"
        android:layout_marginStart="@dimen/home_page_search_bar_edit_margin_start"
        android:layout_marginEnd="@dimen/home_page_search_bar_edit_margin_end"
        android:background="@null"
        android:hint="@string/home_page_search_hint"
        android:lines="1"
        android:maxLength="100"/>
    <View
        android:id="@+id/search_bar_split_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/home_page_search_bar_split_line_height"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/search_background"
        android:layout_marginTop="@dimen/home_page_search_bar_split_line_margin_top"
        android:background="@color/home_page_search_bar_split_line_background"/>
    <TextView
        android:id="@+id/tv_recommend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/search_background"
        app:layout_constraintTop_toBottomOf="@id/search_bar_split_line"
        android:layout_marginTop="@dimen/recommend_app_title_text_margin_top"
        android:text="@string/home_page_recommend"
        android:textColor="@color/recommend_app_title_text_color"
        android:textSize="@dimen/recommend_app_title_text_size"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_recommend"
        android:layout_width="match_parent"
        android:layout_height="@dimen/recommend_app_list_height"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_recommend"
        android:layout_marginTop="@dimen/recommend_app_list_margin_top_of_title"/>
    <View
        android:id="@+id/recommend_split_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/recommend_app_split_line_height"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rv_recommend"
        android:layout_marginTop="@dimen/recommend_app_split_line_margin_top"
        android:background="@color/recommend_app_list_split_line_background"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_free"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/recommend_split_line"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="@dimen/free_app_list_margin_start"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_search"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/recommend_split_line"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="@dimen/free_app_list_margin_start"
        android:visibility="gone"/>

</androidx.constraintlayout.widget.ConstraintLayout>