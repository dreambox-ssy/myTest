<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp">
    <com.jack.lib_common.widget.RoundCornerImageView
        android:id="@+id/recommend_icon"
        android:layout_width="@dimen/recommend_app_list_item_icon_width"
        android:layout_height="@dimen/recommend_app_list_item_icon_width"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/recommend_default_icon"/>
    <TextView
        android:id="@+id/tv_recommend_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/recommend_icon"
        app:layout_constraintEnd_toEndOf="@id/recommend_icon"
        app:layout_constraintTop_toBottomOf="@id/recommend_icon"
        android:gravity="center_horizontal"
        android:lines="1"
        android:ellipsize="end"
        android:textColor="@color/recommend_app_list_item_name_text_color"
        android:text="名称"/>
    <TextView
        android:id="@+id/tv_recommend_category"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/recommend_icon"
        app:layout_constraintEnd_toEndOf="@id/recommend_icon"
        app:layout_constraintTop_toBottomOf="@id/tv_recommend_name"
        android:gravity="center_horizontal"
        android:lines="1"
        android:ellipsize="end"
        android:textColor="@color/recommend_app_list_item_category_text_color"
        android:text="类别"/>
</androidx.constraintlayout.widget.ConstraintLayout>